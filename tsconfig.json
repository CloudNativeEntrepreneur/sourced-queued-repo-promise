{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist/esm"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src"
  ]
}
